[Unit]
Description=DarcyIQ n8n MCP Bridge
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/darcy-n8n-bridge
Environment="PATH=/home/ubuntu/darcy-n8n-bridge/.venv/bin"
ExecStart=/home/ubuntu/darcy-n8n-bridge/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8080
Restart=on-failure
RestartSec=5
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
